<%= form_with(model: portfolio, local: true) do |form| %>
  <% if portfolio.errors.any? %>
    <%= portfolio.errors.full_messages.each do |error| %>
      <%= alert_generator %>
    <% end %>
  <% end %>
  <div class="row">
    <div class = "col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control' %>
      </div>
    </div>
    <div class = 'col-md-6'>
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows: 13 %>
      </div>
    </div>
  </div>



  <div class="col-md-12">

    <h2>Technologies used:</h2>

    <div>
      <%= fields_for :technologies do |technology_form| %>
        <%= render 'technology_fields', f: technology_form %>
        <div>
          <%= link_to_add_association 'Add Technology', form, :technologies %>
        </div>
      <% end %>
    </div>

    <div class = "form-group">
      <%= form.submit "Save Portfolio Item", class: 'btn btn-primary btn-block' %>
    </div>
  </div>
  <% end %>
